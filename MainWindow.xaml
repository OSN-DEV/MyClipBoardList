        <local:ClipItem Index="2" x:Name="cItem02"/>
        <local:ClipItem Index="3" x:Name="cItem03"/>
        <local:ClipItem Index="4" x:Name="cItem04"/>
        <local:ClipItem Index="5" x:Name="cItem05"/>
        <local:ClipItem Index="6" x:Name="cItem06"/>
        <local:ClipItem Index="7" x:Name="cItem07"/>
        <local:ClipItem Index="8" x:Name="cItem08"/>
        <local:ClipItem Index="9" x:Name="cItem09"/>
    </StackPanel>
</Window>
